<VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1280.0" spacing="25.0" stylesheets="@../styles/Stylesheet.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.apollor.spycer.controllers.NewUser">
    <padding>
        <Insets top="50.0" />
    </padding>
    <GridPane vgap="25.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
        </rowConstraints>
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <Label fx:id="spycerTitleLabel" alignment="CENTER" style="-fx-font-size: 48;" text="Spycer" GridPane.columnIndex="1">
            <font>
                <Font name="Arial Bold" size="48.0" />
            </font>
        </Label>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: -t-secondary-color; -fx-background-radius: 15; -fx-border-color: black; -fx-border-radius: 15; -fx-background-insets: 1,4,4; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <BorderPane style="-fx-background-color: transparent;">
                <left>
                    <Label style="-fx-font-size: 36; -fx-font-weight: 900; -fx-font-family: Arial;" text="Create an Account" BorderPane.alignment="CENTER" />
                </left>
                <VBox.margin>
                    <Insets bottom="40.0" left="50.0" top="25.0" />
                </VBox.margin>
            </BorderPane>
            <VBox layoutX="62.0" layoutY="139.0" style="-fx-background-color: transparent;">
                <VBox.margin>
                    <Insets left="50.0" right="50.0" />
                </VBox.margin>
                <Label text="Display Name">
                    <VBox.margin>
                        <Insets bottom="3.0" left="15.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="displayNameTextField" promptText="Display Name" style="-fx-background-color: -secondary-color;">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TextField>
            </VBox>
            <VBox style="-fx-background-color: transparent;">
                <VBox.margin>
                    <Insets left="50.0" right="50.0" />
                </VBox.margin>
                <Label text="Account Email">
                    <VBox.margin>
                        <Insets bottom="3.0" left="15.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="emailTextField" promptText="Email" style="-fx-background-color: -secondary-color;">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TextField>
            </VBox>
            <VBox style="-fx-background-color: transparent;">
                <VBox.margin>
                    <Insets left="50.0" right="50.0" />
                </VBox.margin>
                <Label text="Password">
                    <VBox.margin>
                        <Insets bottom="3.0" left="15.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: -secondary-color;">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </PasswordField>
            </VBox>
            <VBox style="-fx-background-color: transparent;">
                <VBox.margin>
                    <Insets bottom="25.0" left="50.0" right="50.0" />
                </VBox.margin>
                <Label text="Confirm Password">
                    <VBox.margin>
                        <Insets bottom="3.0" left="15.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-color: -secondary-color;">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </PasswordField>
            </VBox>
            <BorderPane style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <right>
                    <Button fx:id="createAccountButton" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: -tertiary-color; -fx-text-fill: -contrast-color; -fx-font-size: 24;" text="Create Account" BorderPane.alignment="CENTER">
                        <BorderPane.margin>
                            <Insets right="50.0" />
                        </BorderPane.margin>
                    </Button>
                </right>
                <left>
                    <Hyperlink fx:id="loginLink" style="-fx-text-fill: -tertiary-color;" text="Have Account Already?" BorderPane.alignment="CENTER">
                        <BorderPane.margin>
                            <Insets left="50.0" />
                        </BorderPane.margin>
                        <font>
                            <Font name="Arial" size="18.0" />
                        </font>
                    </Hyperlink>
                </left>
                <VBox.margin>
                    <Insets bottom="50.0" />
                </VBox.margin>
            </BorderPane>
        </VBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="20.0" right="20.0" />
            </GridPane.margin>
            <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: -t-secondary-color; -fx-background-radius: 15; -fx-border-color: black; -fx-border-radius: 15; -fx-background-insets: 1,4,4; -fx-border-width: 2;">
                <Label style="-fx-font-size: 24; -fx-font-weight: 900; -fx-font-family: Arial;" text="Password Rules">
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                </Label>
                <BorderPane style="-fx-background-color: transparent;">
                    <left>
                        <CheckBox fx:id="lengthCheckBox" mnemonicParsing="false" style="-fx-font-size: 20;" text="12 Characters Long" BorderPane.alignment="CENTER" />
                    </left>
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </BorderPane>
                <BorderPane layoutX="37.0" layoutY="84.0" style="-fx-background-color: transparent;">
                    <left>
                        <CheckBox fx:id="capitalCheckBox" mnemonicParsing="false" style="-fx-font-size: 20;" text="Capital Letter" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                        </CheckBox>
                    </left>
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </BorderPane>
                <BorderPane layoutX="12.0" layoutY="136.0" style="-fx-background-color: transparent;">
                    <left>
                        <CheckBox fx:id="numberCheckBox" mnemonicParsing="false" style="-fx-font-size: 20;" text="Number" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                        </CheckBox>
                    </left>
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </BorderPane>
                <BorderPane layoutX="12.0" layoutY="188.0" style="-fx-background-color: transparent;">
                    <left>
                        <CheckBox fx:id="specialCharacterCheckBox" mnemonicParsing="false" style="-fx-font-size: 20;" text="Special Character" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                        </CheckBox>
                    </left>
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </BorderPane>
                <BorderPane layoutX="37.0" layoutY="240.0" style="-fx-background-color: transparent;">
                    <left>
                        <CheckBox mnemonicParsing="false" style="-fx-font-size: 20;" text="Password Match" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                        </CheckBox>
                    </left>
                    <VBox.margin>
                        <Insets bottom="25.0" left="25.0" />
                    </VBox.margin>
                </BorderPane>
            </VBox>
        </VBox>
    </GridPane>
</VBox>
